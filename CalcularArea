programa
{
    funcao inicio(){
        real base, altura, area

        escreva("Digite a base do triângulo: ")
        leia(base)

        escreva("Digite a altura do triângulo: ")
        leia(altura)

        area = (base * altura) / 2

         escreva("A área do triângulo é: ", area)

         escreva("\n==Exibir Dados==")
         escreva("\nBase:",base)
         escreva("\nAltura:",altura)
         escreva("\nÁrea:",area)
         
    }
}
