programa
{
    funcao inicio()
    {
        inteiro idade

        escreva("Digite sua idade: ")
        leia(idade)

        se (idade >= 18 e idade <= 70) {
            escreva("Você é obrigado a votar.")
        } senao se (idade == 16 ou idade == 17 ou idade > 70) {
            escreva("Seu voto é facultativo.")
        } senao {
            escreva("Você não pode votar.")
        }
    }
}






























